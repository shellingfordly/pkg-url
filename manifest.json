{
  "name": "Getting Started Example",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/imgs/logo.svg",
      "32": "/imgs/logo.svg",
      "48": "/imgs/logo.svg",
      "128": "/imgs/logo.svg"
    }
  },
  "icons": {
    "16": "/imgs/logo.svg",
    "32": "/imgs/logo.svg",
    "48": "/imgs/logo.svg",
    "128": "/imgs/logo.svg"
  }
}
